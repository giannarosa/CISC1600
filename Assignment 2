#include <iostream>
#include <string>
using namespace std;

int main ()
{
        string a;
        string b;
        string c;

        cout << "Enter your name: ";
        getline(cin, a);
        cout << "Enter your age: ";
        getline(cin, b);
        cout << "Enter your favorite thing to do: ";
        getline(cin, c);

cout << "Hi, " << a << "." << endl;
cout << "I know you are " << b <<  " years old and your favorite thing is " << c << "." << endl;
}
